<form class="" action="/tours" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name">
  <label for="start-date">Start date:</label>
  <input type="date" name="start_date" id="start-date">
  <label for="days">Days:</label>
  <input type="number" name="days" id="days">
  <label for="price">Price:</label>
  <input type="number" name="price" id="price">
  <label for="pic-url">Picture url:</label>
  <input type="text" name="pic_url" id="pic-url">
  <label for="vehicle">Pick a bus:</label>
  <select class="" name="vehicle_id" id="vehicle">
    <% @vehicles.each do |vehicle| %>
      <option value="<%= vehicle.id %>"><%= vehicle.reg_number %></option>
    <% end %>
  </select>  
  <input type="submit" value="add tour">
</form>
